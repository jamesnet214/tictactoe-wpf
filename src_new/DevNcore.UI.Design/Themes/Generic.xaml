<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prims="clr-namespace:DevNcore.UI.Design.Controls.Primitives"
    xmlns:icons="clr-namespace:DevNcore.UI.Design.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DevNcore.UI.Design.Geometry;component/Themes/Packages.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type prims:Icon}">
        <Setter Property="CornerRadius" Value="0 0 0 0"/>
        <Setter Property="Margin" Value="0 0 0 0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="GeometryWidth" Value="24"/>
        <Setter Property="GeometryHeight" Value="24"/>
        <Setter Property="Fill" Value="#CCFFFFFF"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Width" Value="15"/>
        <Setter Property="Height" Value="15"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type prims:Icon}">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <Viewbox>
                            <Canvas Width="{TemplateBinding GeometryWidth}" 
                                    Height="{TemplateBinding GeometryHeight}" 
                                    Margin="{TemplateBinding Padding}">
                                <Path Width="{TemplateBinding GeometryWidth}" 
                                      Height="{TemplateBinding GeometryHeight}" 
                                      Data="{TemplateBinding Data}" 
                                      Fill="{TemplateBinding Fill}"
                                      Stroke="{TemplateBinding Stroke}"
                                      StrokeThickness="{TemplateBinding StrokeThickness}"/>
                            </Canvas>
                        </Viewbox>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type icons:CheckIcon}" BasedOn="{StaticResource {x:Type prims:Icon}}">
        <Setter Property="Data" Value="{StaticResource Check}"/>
    </Style>
    <Style TargetType="{x:Type icons:CircleIcon}" BasedOn="{StaticResource {x:Type prims:Icon}}">
        <Setter Property="Data" Value="{StaticResource Circle}"/>
    </Style>
    <Style TargetType="{x:Type icons:CloseIcon}" BasedOn="{StaticResource {x:Type prims:Icon}}">
        <Setter Property="Data" Value="{StaticResource Close}"/>
    </Style>
    <Style TargetType="{x:Type icons:PlayIcon}" BasedOn="{StaticResource {x:Type prims:Icon}}">
        <Setter Property="Data" Value="{StaticResource Play}"/>
    </Style>
    <Style TargetType="{x:Type icons:TriangleIcon}" BasedOn="{StaticResource {x:Type prims:Icon}}">
        <Setter Property="Data" Value="{StaticResource Triangle}"/>
    </Style>
</ResourceDictionary>
